{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./src/**/*"]
}
