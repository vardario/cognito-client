{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["es2022", "dom", "DOM.Iterable"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/tests/**/*", "cdk/**/*"]
}
